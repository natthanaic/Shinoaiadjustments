<script>
// Toggle Sidebar
function toggleShinoAI() {
    const sidebar = document.getElementById('shinoaiSidebar');
    // Check if we use 'collapsed' (old way) or 'open' (new way)
    // The CSS above supports .open, but let's support both to be safe
    if (sidebar.classList.contains('collapsed')) {
        sidebar.classList.remove('collapsed');
        sidebar.classList.add('open');
    } else if (sidebar.classList.contains('open')) {
        sidebar.classList.remove('open');
        sidebar.classList.add('collapsed');
    } else {
        // Initial state assume collapsed, so open it
        sidebar.classList.add('open');
    }
}

// Auto-resize textarea
const shinoaiInput = document.getElementById('shinoaiInput');
if(shinoaiInput) {
    shinoaiInput.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = (this.scrollHeight) + 'px';
        if(this.value === '') this.style.height = 'auto';
    });

    // Handle Enter key
    shinoaiInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            sendShinoAIMessage();
        }
    });
}

async function sendShinoAIMessage() {
    const input = document.getElementById('shinoaiInput');
    const message = input.value.trim();
    
    if (!message) return;

    // Clear input
    input.value = '';
    input.style.height = 'auto';

    // Add User Message
    addMessageToChat(message, 'user');

    // Add Loading Indicator
    const loadingId = addTypingIndicator();

    try {
        const response = await fetch('/api/shinoai/chat', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ message: message })
        });

        const data = await response.json();

        // Remove Loading
        removeTypingIndicator(loadingId);

        if (data.success) {
            // FIX: Use data.reply instead of data.message/text
            // The API returns { success: true, reply: "...", timestamp: "..." }
            addMessageToChat(data.reply, 'assistant');
        } else {
            addMessageToChat('‚ùå Sorry, I encountered an error: ' + (data.error || 'Unknown error'), 'assistant');
        }

    } catch (error) {
        console.error('ShinoAI Error:', error);
        removeTypingIndicator(loadingId);
        addMessageToChat('‚ùå Sorry, connection failed. Please try again.', 'assistant');
    }
}

function addMessageToChat(text, sender) {
    const messagesContainer = document.getElementById('shinoaiMessages');
    
    // Safety check for undefined text
    if (!text) {
        console.error('Attempted to add empty message');
        return;
    }

    const messageDiv = document.createElement('div');
    messageDiv.className = `shinoai-message ${sender}`;
    
    const avatarIcon = sender === 'assistant' ? 'bi-robot' : 'bi-person';
    
    // Format text (Basic Markdown support)
    const formattedText = sender === 'assistant' ? formatMessage(text) : text;

    messageDiv.innerHTML = `
        <div class="message-avatar">
            <i class="bi ${avatarIcon}"></i>
        </div>
        <div class="message-content">
            <div class="message-bubble">
                ${formattedText}
            </div>
            ${sender === 'assistant' ? 
                `<div class="d-flex justify-content-end gap-2 mt-1">
                    <button class="btn btn-link p-0 text-muted" style="font-size: 0.7rem;" onclick="copyToClipboard(this)">
                        <i class="bi bi-clipboard"></i>
                    </button>
                 </div>` : ''}
        </div>
    `;

    messagesContainer.appendChild(messageDiv);
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
}

function formatMessage(text) {
    if (!text) return ''; // Prevent crash if text is undefined

    let formatted = text;

    // Convert newlines to <br>
    formatted = formatted.replace(/\n/g, '<br>');

    // Convert **bold**
    formatted = formatted.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');

    // Convert *italic*
    formatted = formatted.replace(/\*(.*?)\*/g, '<em>$1</em>');

    // Convert lists
    formatted = formatted.replace(/^- (.+)$/gm, '<li>$1</li>');
    if (formatted.includes('<li>')) {
        // Wrap adjacent li's in ul (simple regex approach)
        // This is a basic formatter, for complex markdown use a library like marked.js
        if (!formatted.includes('<ul>')) {
             formatted = formatted.replace(/((?:<li>.*<\/li>\s*)+)/g, '<ul>$1</ul>');
        }
    }

    return `<div class="mb-0">${formatted}</div>`;
}

// Add typing indicator
function addTypingIndicator() {
    const messagesContainer = document.getElementById('shinoaiMessages');

    const typingDiv = document.createElement('div');
    typingDiv.className = 'shinoai-message assistant';
    typingDiv.id = 'typing-indicator-' + Date.now();

    typingDiv.innerHTML = `
        <div class="message-avatar">
            <i class="bi bi-robot"></i>
        </div>
        <div class="message-content">
            <div class="message-bubble">
                <div class="typing-indicator">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    `;

    messagesContainer.appendChild(typingDiv);
    messagesContainer.scrollTop = messagesContainer.scrollHeight;

    return typingDiv.id;
}

// Remove typing indicator
function removeTypingIndicator(id) {
    const indicator = document.getElementById(id);
    if (indicator) {
        indicator.remove();
    }
}

function copyToClipboard(btn) {
    // Find the message bubble content relative to the button
    const bubble = btn.closest('.message-content').querySelector('.message-bubble');
    const text = bubble.innerText; // Get plain text
    
    navigator.clipboard.writeText(text).then(() => {
        const originalIcon = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check2 text-success"></i>';
        setTimeout(() => {
            btn.innerHTML = originalIcon;
        }, 2000);
    });
}
</script>